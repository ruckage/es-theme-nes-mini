<theme>
    <formatVersion>3</formatVersion>
    <include>./../nesmini.xml</include>
	

	<view name="system">

		<image name="background" extra="true">
			<path>./system_art.png</path>
		</image>

		<image name="logo">
			<path>./logo.png</path>
        </image>
			
	</view>
	
	<feature supported="carousel">

		<view name="system">
			<image name="logo">
				<path>./carousel_logo.png</path>
			</image>
			
			<image name="carousel_bar" extra="true">
				<color>757575</color>
			</image>
		
		</view>

	</feature>

	<view name="basic, detailed, video">
		<image name="logo">
			<path>./logo.png</path>
			<pos>2 2</pos>
			<maxSize>0.1 0.1</maxSize>
			<origin>0 0.5</origin>
		</image>
		
		
	</view>

	<view name="basic">
	
	</view>

	<view name="basic, detailed, video">

		<text name="md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_releasedate">
			<color>d7e894</color>
		</text>
		
		<text name="md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_releasedate">
			<color>d7e894</color>
		</text>
			
		<text name="md_playcount">
			<alignment>center</alignment>
			<pos>2 2</pos>
			<size>0.07265625 0.0458333333333333</size>
		</text>

		<text name="md_players">
			<alignment>left</alignment>
			<pos>2 2</pos>
			<size>0.01875 0.0458333333333333</size>
		</text>
		
		<text name="md_genre">
			<pos>2 2</pos>
			<size>0.234375 0.0375</size>
		</text>

		<text name="md_publisher">
			<pos>2 2</pos>
			<size>0.234375 0.0375</size>
		</text>
		
		<text name="md_developer">
			<pos>2 2</pos>
			<size>0.234375 0.0375</size>
		</text>
		
		<datetime name="md_releasedate">
			<pos>2 2</pos>
			<color>aec440</color>
		</datetime>
		
		<rating name="md_rating">
			<pos>2 2</pos>
			<size>0.01875 0.0333333333333333</size>
			<filledPath>./../art/heart_filled.png</filledPath>
			<unfilledPath>./../art/heart_empty.png</unfilledPath>
		</rating>
		
		
		<textlist name="gamelist">
			<selectorColor>00aa00</selectorColor>
			<selectedColor>ffff66</selectedColor>
			<primaryColor>757575</primaryColor>
			<secondaryColor>00aa00</secondaryColor>
		</textlist>
		
		<image name="background" extra="true">
			<path>./menu_background.png</path>
		</image>

		<image name="missing_art" extra="true">
			<pos>2 2</pos>
		</image>	
		
	</view>
	
</theme>