<theme>
    <formatVersion>3</formatVersion>
	
	<feature supported="carousel">

		<view name="system">

			<carousel name="systemcarousel">
				<pos>-0.0 0.3</pos>
				<size>1.0 0.4</size>
				<logoSize>0.1916666666666667 0.3703703703703704</logoSize>
				<maxLogoCount>5</maxLogoCount>
				<zIndex>101</zIndex>
			</carousel>

			<text name="systemInfo">
				<pos>0.00 0.2222222222222222</pos>
				<size>1 0.050</size>
				<zIndex>102</zIndex>				
			</text>
			
		<image name="carousel_bar" extra="true">
			<size>0 0.4814814814814815</size>
			<pos>0.5 0.2185185185185185</pos>
			<zIndex>100</zIndex>
		</image>			

		</view>

	</feature>	

    <view name="basic, detailed">
			
		<image name="background" extra="true">

		</image>
		
		<image name="md_image">
			<maxSize>0.2416666666666667 0.4296296296296296</maxSize>
		</image>
		
		<text name="md_developer, md_publisher, md_genre">
			<size>0.25 0.0333333333333333</size>
		</text>		
		
		<text name="md_playcount">
			<alignment>center</alignment>
			<size>0.09375 0.0333333333333333</size>
		</text>
		
		<text name="md_players">
			<alignment>left</alignment>
			<size>0.01875 0.0407407407407407</size>
		</text>		
	
		<image name="left_window_border" extra="true">
			<path>./window_border.png</path>
			<size>0 0.6666666666666667</size>
			<pos>0 0.5</pos>
			<origin>0 0.5</origin>
			<color>c8c8c8</color>
		</image>
		
		<image name="left_window_body" extra="true">
			<path>./window_body.png</path>
			<size>0 0.6518518518518519</size>
			<pos>0.0041666666666667 0.5</pos>
			<origin>0 0.5</origin>
			<color>ffffff</color>
		</image>
		
		<image name="right_window_border" extra="true">
			<path>./window_border.png</path>
			<size>0 0.6666666666666667</size>
			<pos>1 0.5</pos>
			<origin>1 0.5</origin>
			<color>c8c8c8</color>
		</image>
		
		<image name="right_window_body" extra="true">
			<path>./window_body.png</path>
			<size>0 0.6518518518518519</size>
			<pos>0.9958333333333333 0.5</pos>
			<origin>1 0.5</origin>
			<color>ffffff</color>
		</image>


		
		<image name="right_window_box" extra="true">
			<path>./window_box.png</path>
			<size>0 0.4888888888888889</size>
			<color>c8c8c8</color>
		</image>
		
		<image name="left_window_box" extra="true">
			<path>./window_box.png</path>		
			<size>0 0.4888888888888889</size>
			<color>c8c8c8</color>
		</image>		

		<image name="missing_art" extra="true">
			<path>./missing.png</path>
			<origin>0.5 0.5</origin>
			<size>0 0.2518518518518519</size>
		</image>

		
		<image name="bar_1" extra="true">
			<path>./info_bar.png</path>
			<size>0 0.1111111111111111</size>
			<color>000000</color>
		</image>		
		
		<image name="bar_2" extra="true">
			<path>./info_bar.png</path>
			<size>0 0.1111111111111111</size>
			<color>000000</color>
		</image>		

		<image name="bar_3" extra="true">
			<path>./info_bar.png</path>
			<size>0 0.1111111111111111</size>
			<color>000000</color>
		</image>

		<image name="bar_4" extra="true">
			<path>./rating_bar.png</path>
			<size>0 0.1111111111111111</size>
			<color>000000</color>
		</image>

		<image name="player_box" extra="true">
			<path>./player_box.png</path>
			<size>0 0.0666666666666667</size>
			<color>ff0000</color>		
		</image>

		<text name="publisher_label, developer_label, genre_label, rating_label, played_label" extra="true">
			<fontPath>./../art/TinyUnicode.ttf</fontPath>
			<forceUppercase>1</forceUppercase>
			<fontSize>0.0592592592592593</fontSize>
			<color>ff0000</color>
			<size>0.25 0.0333333333333333</size>
		</text>
		
		<text name="players_label" extra="true">
			<fontPath>./../art/NESCyrillic_gamelist.ttf</fontPath>
			<size>0.0416666666666667 0.0407407407407407</size>
			<fontSize>0.0592592592592593</fontSize>
			<alignment>right</alignment>
			<color>ffffff</color>
			<text>P</text>
		</text>
		
		<text name="publisher_label" extra="true">
			<alignment>left</alignment>
			<text>  Published</text>
		</text>
		
		<text name="developer_label" extra="true">
			<alignment>center</alignment>
			<text>Developed by</text>
		</text>		

		<text name="genre_label" extra="true">
			<alignment>center</alignment>
			<text>Genre</text>
		</text>	

		<text name="rating_label" extra="true">
			<alignment>center</alignment>
			<size>0.09375 0.0333333333333333</size>
			<text>Rating</text>
		</text>	

		<text name="played_label" extra="true">
			<alignment>center</alignment>
			<size>0.09375 0.0333333333333333</size>
			<text>Played</text>
		</text>			
		 
	</view>
	
</theme>
