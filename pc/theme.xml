<theme>
    <formatVersion>3</formatVersion>
    <include>./../nesmini.xml</include>
	

	<view name="system">

		<image name="background" extra="true">
			<path>./system_art.png</path>
		</image>

		<image name="logo">
			<path>./logo.png</path>
        </image>
			
	</view>
	
	<feature supported="carousel">

		<view name="system">
			<image name="logo">
				<path>./carousel_logo.png</path>
			</image>
			
			<image name="carousel_bar" extra="true">
				<color>757575</color>
			</image>
		
		</view>

	</feature>

	<view name="basic, detailed, video">
	
		<image name="logo">
			<path>./logo.png</path>
			<pos>2 2</pos>
			<maxSize>0.1 0.1</maxSize>
			<origin>0 0.5</origin>
		</image>
	
		<rating name="md_rating">
			<filledPath>./../art/heart_filled.png</filledPath>
			<unfilledPath>./../art/heart_empty.png</unfilledPath>
		</rating>
		
		<textlist name="gamelist">
			<selectorColor>0170ff</selectorColor>
			<selectedColor>21ffff</selectedColor>
			<primaryColor>757575</primaryColor>
			<secondaryColor>0170ff</secondaryColor>
		</textlist>
		
		<image name="background" extra="true">
			<path>./menu_background.png</path>
		</image>
		

	
	
		
		<image name="player_box" extra="true">
			<color>0170ff</color>		
		</image>

		<text name="publisher_label, developer_label, genre_label, rating_label, played_label" extra="true">
			<color>ff0000</color>
		</text>

		<datetime name="md_releasedate">
			<color>ff0000</color>
		</datetime>	

		
		
	

	</view>
	
</theme>
